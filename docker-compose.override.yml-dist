services:
  web:
    build:
      context: .
      target: bht-test
      args:
        - USER_UID=$USER_UID
        - USER_GID=$USER_GID
    command: flask --debug --app bht_web run --host=0.0.0.0
    ports:
      - "5000:5000"
    volumes:
      - ./:/home/bibheliotech/BibHelioTech/


  worker:
    volumes:
      - ./DATA:/home/bibheliotech/BibHelioTech/DATA:rw

  nginx:
    profiles:
      - donotstart
